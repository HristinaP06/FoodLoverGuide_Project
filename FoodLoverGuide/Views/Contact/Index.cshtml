@{
}

@model IEnumerable<FoodLoverGuide.Models.Contact>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Telephone</td>
                <td>@contact.Email</td>
                <td>
                    <a asp-action="Edit" asp-controller="Contact" asp-route-id="@contact.Id" class="btn btn-success">Edit</a>
                    <form method="post" asp-controller="Contact" asp-action="Delete">
                        <button class="btn btn-danger" type="submit" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.Id">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
