@{
    ViewData["Title"] = "Резервацията е успешна";
    var restaurantId = (Guid)ViewData["RestaurantId"];
}

<div class="container py-5 text-center">
    <div class="card shadow-sm">
        <div class="card-body">
            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
            <h1 class="mt-4">Резервацията е успешна!</h1>
            <p class="lead text-muted">Вашата резервация беше успешно записана.</p>
            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home mr-2"></i> Към началната страница
                </a>
                <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurantId"
                   class="btn btn-outline-secondary ml-2">
                    <i class="fas fa-utensils mr-2"></i> Обратно към ресторанта
                </a>
            </div>
        </div>
    </div>
</div>