@model FoodLoverGuide.Core.ViewModels.Restaurant.AddPhotoRestaurantVM
@{
	ViewData["Title"] = "Upload photo";
}

<h2>Upload photo</h2>
<form asp-action="Create" method="post">
	<input type="hidden" asp-for="RestaurantId" value="@Model.RestaurantId" />
    <div class="form-group">
        <label class="font-weight-bold">Upload Image</label>
        <input type="file" class="form-control" id="File" name="File" value="@Model.File" accept="image/*" onchange="previewImage(event)" />
        <img id="imagePreview" class="mt-2" style="max-width: 200px; display: none;" />
    </div>

    <div class="form-group">
        <label for="Photo" class="font-weight-bold">Or Enter Image URL</label>
        <input type="text" class="form-control" asp-for="Photo" placeholder="Enter image URL" />

    </div>
    <button type="submit" class="btn btn-primary" asp-action="Create" asp-controller="RestaurantPhoto">Upload</button>
</form>