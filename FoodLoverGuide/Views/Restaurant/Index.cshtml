@{
}

@model IEnumerable<FoodLoverGuide.Models.ViewModels.RestaurantDetailsViewModel>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Ресторант</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model)
        {
            <tr>
                <th scope="row">Name</th>
                <td>@res.Name</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>@res.Description</td>
            </tr>
            <tr>
                <th scope="row">Category:</th>
                @foreach(var cat in res.Categories)
                {
                    <td>@cat.Value</td>
                }
            </tr>
        }
    </tbody>
</table>

