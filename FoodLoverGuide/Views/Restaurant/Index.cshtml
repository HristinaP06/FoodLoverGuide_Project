@using FoodLoverGuide.Core.ViewModels.Restaurant
@model IEnumerable<RestaurantCreateVM>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Ресторант</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var res in Model)
        {
            <tr>
                <th scope="row">Име</th>
                <td>@res.Name</td>
            </tr>
            <tr>
                <th scope="row">Описание</th>
                <td>@res.Description</td>
            </tr>

            <a asp-action="Edit" asp-controller="Restaurant" asp-route-id="@res.Id" class="btn btn-success">Редактирай</a>
            <form method="post" asp-controller="Restaurant" asp-action="Delete">
                <button class="btn btn-danger" type="submit" asp-controller="Restaurant" asp-action="Delete" asp-route-id="@res.Id">Изтрий</button>
            </form>
        }
    </tbody>
</table>
