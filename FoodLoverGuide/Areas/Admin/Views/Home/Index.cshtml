@model IEnumerable<FoodLoverGuide.Models.Restaurant>

@{
    ViewData["Title"] = "Home";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Restaurants</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Restaurants</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">All Restaurants</h3>
                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Location</th>
                                        <th>Rating</th>
                                        <th>Price Range</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var restaurant in Model)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id">
                                                    @restaurant.Name
                                                </a>
                                            </td>
                                            <td>@restaurant.Location</td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-primary mr-2">@(restaurant.RatingList.Select(r => r._Rating).Sum() / restaurant.RatingList.Count())</span>
                                                    <div>
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            if (i <= (restaurant.RatingList.Select(r => r._Rating).Sum() / restaurant.RatingList.Count()))
                                                            {
                                                                <i class="fas fa-star text-warning"></i>
                                                            }
                                                            else if (i - (restaurant.RatingList.Select(r => r._Rating).Sum() / restaurant.RatingList.Count()) > 0 && i - (restaurant.RatingList.Select(r => r._Rating).Sum() / restaurant.RatingList.Count()) < 1)
                                                            {
                                                                <i class="fas fa-star-half-alt text-warning"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="far fa-star text-warning"></i>
                                                            }
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@restaurant.PriceRangeFrom - @restaurant.PriceRangeTo лв.</td>
                                            <td>
                                                <a asp-controller="Restaurant" asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
            <!-- /.row -->
        </div>
    </section>
    <!-- /.content -->
</div>