@using FoodLoverGuide.Core.ViewModels.RestaurantPhoto
@model RestaurantPhotosVM

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <h2 style="text-align:center; color: #e67e22">Редакция на снимки</h2>
            <div class="col-12">
                <a asp-action="Create" asp-controller="RestaurantPhoto" asp-route-restaurantId="@Model.RestaurantId" asp-route-nextAction="Index" class="btn" style="margin-bottom: 10px; background-color: #27ae60; color: white;">
                    <i class="fas fa-plus-circle mr-1"></i>Добави
                </a>
                <div class="card">
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th style="text-align: left; border-bottom-color: #e67e22">Снимка</th>
                                    <th style="text-align: right; border-bottom-color: #e67e22">Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var photo in Model.RestaurantPhotos)
                                {
                                    <tr>
                                        <td>
                                            <img src="@photo.Photo" alt="Ресторантска снимка" style="max-height: 100px;" />
                                        </td>
                                        <td style="text-align: right;">
                                            <a asp-action="Edit" asp-route-id="@photo.Id" class="btn btn-warning btn-sm">Редактирай</a>
                                            <form asp-action="Delete" asp-route-id="@photo.Id" asp-route-restaurantId="@photo.RestaurantId" method="post" style="display:inline;">
                                                <button type="submit" class="btn btn-danger btn-sm">Изтрий</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
