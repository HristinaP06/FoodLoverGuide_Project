@model FoodLoverGuide.Core.ViewModels.Restaurant.AddPhotoRestaurantVM

<div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Добави снимки на ресторанта</h3>
            </div>
            <form method="post">
                <input type="hidden" name="RestaurantId" value="@Model.RestaurantId" />
                <div class="form-group">
                    <label class="font-weight-bold">Качи снимка</label>
                    <input type="file" class="form-control" id="Files" name="Files" value="@Model.Files" accept="image/*" onchange="previewImage(event)" multiple />
                    <img id="imagePreview" class="mt-2" style="max-width: 200px; display: none;" />
                </div>
                <div class="form-group">
                    <label for="Photo" class="font-weight-bold">Или добави URL на снимата</label>
                    <input type="text" class="form-control" asp-for="Photos" placeholder="Enter image URL" multiple />

                </div>
                <button type="submit" class="btn btn-primary" asp-action="Create" asp-controller="MenuItem">Добави</button>
            </form>

        </div>
    </div>
</div>


