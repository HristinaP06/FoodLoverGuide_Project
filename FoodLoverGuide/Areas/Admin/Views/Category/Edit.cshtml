@model FoodLoverGuide.Models.Category;

<div class="row d-flex justify-content-center">
    <div class="col-6">
        <div class="card card-success">
            <div class="card-header" style="background-color:#27ae60">
                <h3 class="card-title" style="color: white;">Редактирай категория</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="form-label">Име</label>
                        <input asp-for="CategoryName" type="text" class="form-control" aria-required="true" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer" style="justify-items: center">
                    <button class="btn" style="background-color: #27ae60; color: white;" type="submit" asp-action="Edit" asp-controller="Category" asp-route-id="@Model.Id">Редактирай</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
