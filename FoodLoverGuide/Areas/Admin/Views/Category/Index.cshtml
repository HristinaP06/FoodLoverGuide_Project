@{
}

@model IEnumerable<FoodLoverGuide.Models.Category>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model)
        {
        <tr>
            <td>@cat.CategoryName</td>
            <td>
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@cat.Id" class="btn btn-success">Edit</a>
               <form method="post" asp-controller="Category" asp-action="Delete">
                        <button class="btn btn-danger" type="submit" asp-controller="Category" asp-action="Delete" asp-route-id="@cat.Id">Delete</button>
               </form>
                </td>
        </tr>
        }
    </tbody>
</table>
