@model IEnumerable<FoodLoverGuide.Models.Feature>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Характеристики</h3>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-wrap">
                    <thead>
                        <tr>
                            <th style="text-align: center; border-bottom-color: black">Име</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feature in Model)
                        {
                            <tr>
                                <td style="text-align: center;">@feature.Name</td>
                                <td style="text-align: right;">
                                    <div class="btn-group-sm">
                                        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">Действия</button>
                                        <div class="dropdown-menu" role="menu" style="">
                                            <a class="dropdown-item" asp-action="edit" asp-controller="category" asp-route-id="@feature.Id">Редакция</a>
                                            <form method="post">
                                                <button type="submit" class="dropdown-item" asp-action="delete" asp-controller="category" asp-route-id="@feature.Id">Изтрий</button>
                                            </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>