@using FoodLoverGuide.Core.ViewModels.User
@model IEnumerable<UserVM>

@{
    ViewData["Title"] = "Потребители";
}

<div class="row">
    <h2 style="text-align:center; color: #e67e22">Потребители</h2>
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-wrap">
                    <thead>
                        <tr>
                            <th style="text-align: center; border-bottom-color: #e67e22">Име</th>
                            <th style="text-align: center; border-bottom-color: #e67e22">Фамилия</th>
                            <th style="text-align: center; border-bottom-color: #e67e22">Имейл</th>
                            <th style="text-align: center; border-bottom-color: #e67e22">Роля</th>
                            <th style="text-align: center; border-bottom-color: #e67e22">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td style="text-align: center;"><a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id" class="name-label">@user.FirstName</a></td>
                                <td style="text-align: center;">@user.LastName</td>
                                <td style="text-align: center;">@user.Email</td>
                                <td style="text-align: center;">@user.Role</td>
                                <td style="text-align: center;">
                                    <div class="btn-group-sm">
                                        <button type="button" class="btn dropdown-toggle" data-bs-toggle="dropdown" style="background-color: #27ae60; color: white">Действия</button>
                                        <div class="dropdown-menu" role="menu" style="">
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Детайли</a>
                                            <form method="post">
                                                <button type="submit" class="dropdown-item" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id">Изтрий</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .name-label {
        text-decoration: none;
        color: black;
    }

        .name-label:hover {
            text-decoration: underline;
            color: black;
        }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
